<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AddEmployeeController">
   <center>
      <VBox minWidth="-Infinity" prefWidth="170.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="First Name" />
            <TextField fx:id="tfEmpFName">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </TextField>
            <Label text="Last Name" />
            <TextField fx:id="tfEmpLName">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </TextField>
            <Label text="Email Address" />
            <TextField fx:id="tfEmpEmailAdd">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </TextField>
            <Label layoutX="10.0" layoutY="124.0" text="Phone Number" />
            <TextField fx:id="tfEmpPhNum">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lblError" text="Error" textFill="RED" visible="false">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#handleBack" text="Back" />
            <Region minWidth="15.0" HBox.hgrow="ALWAYS" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#handleAddEmployee" text="Add" />
         </children>
      </HBox>
   </bottom>
   <top>
      <Label text="Add Employee" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="30.0" />
         </BorderPane.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
</BorderPane>
